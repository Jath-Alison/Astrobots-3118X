
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="RE_App">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h1>Robot Events Dashboard</h1>
        <hr />
        <div>
            <!--https://getbootstrap.com/docs/5.0/components/navs-tabs/-->

            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#divTeams">Teams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#divEvents">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#divPrograms">Program</a>
                </li>

            </ul>

            <div class="tab-content" ng-controller="RobotEventsController">
                <div id="divTeams" class="tab-pane fade show active" role="tabpanel" aria-labelledby="divTeams">

                    <button id="btngetteams" class="btn btn-success btn-lg mt-5" ng-click="GetTeams()" >Get Teams</button>
                    <div class="row mt-3">
                        <h2>Result:</h2>
                        <br />
                        <br />
                        
                        <div>
                            <p>{{TeamList}}</p>
                        </div>
                        <div class="col-md-6">
                            @*<table class="table table-striped">
            <tr>
                <th>param1</th>
                <th>param2</th>
            </tr>
            <tr ng-repeat="team in TeamList">
                <td>{{team.param1}}</td>
                <td>{{team.param2}}</td>
            </tr>
        </table>*@
                        </div>
                    </div>
                </div>
                <div id="divEvents" class="tab-pane fade" role="tabpanel" aria-labelledby="divEvents">
                    <h3>Get Events</h3>
                    <br />
                    <button id="btngetteams" class="btn btn-success btn-lg">Get Events</button>
                </div>
                <div id="divPrograms" class="tab-pane fade" role="tabpanel" aria-labelledby="divPrograms">
                    <h3>Get Program</h3>
                    <br />
                    <button id="btngetteams" class="btn btn-success btn-lg">Get Program</button>
                </div>

            </div>

        </div>
    </div>

</body>
</html>
<script src="Scripts/angular.js"></script>
<script src="Scripts/RobotEvent.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
